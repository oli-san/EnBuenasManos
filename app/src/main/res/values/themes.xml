<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnBuenasManos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textAppearance">@style/textAppearanceCustom</item>
    </style>

    <style name="textAppearanceCustom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/LoginText</item>
    </style>

    <style name="LoginBoton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">@color/LoginButton</item>
    </style>

    <style name="LoginInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/LoginText</item>
        <item name="android:textSize">14sp</item>
        <item name="colorOnSurface">@color/LoginText</item>
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
        <item name="colorControlHighlight">@color/LoginButton</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="LoginInput" parent="LoginInputLayout">
        <item name="android:paddingTop">35dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for Material 3 Bottom Navigation View. -->
    <style name="bottomNavBar" parent="Theme.Material3.Dark">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorSecondaryContainer">@color/LoginHighlight</item>
        <item name="colorSurface">@color/m3_sys_color_light_surface</item>
        <item name="colorOnSurfaceVariant">@color/LoginForgot</item>
    </style>
</resources>